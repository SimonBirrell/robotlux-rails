<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.input :email, required: false, autofocus: true, class: 'form-control', placeholder: 'E-mail', label: false %>
    <%= f.input :password, required: false, class: 'form-control', placeholder: 'Password', label: false %>
	<!---
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	-->

	<%= link_to "Sign in", "#", class: "btn btn-primary btn-block sign", onclick: "$(this).parents('form').submit();" %>

<% end %>

<div class="bottom_info">
<%= render "devise/shared/links" %>
</div>