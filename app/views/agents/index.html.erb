<%= render partial: 'layouts/index_top', locals: {items_name: 'agents', headings: ['Name', 'Slug', 'Org', 'Guid', 'Hostname', 'ROS Master URI', 'Network', 'Authorization', 'User']} %>

        <% @agents.each do |agent| %>
          <%= render partial: 'layouts/index_row', locals: {
            row: robot_instance, 
            columns: [
            {link: agent_path(agent), text: agent.name},
            {text: agent.slug},
            {link: org_path(agent.org), text: agent.org.name},
            {text: agent.guid},
            {text: agent.hostname},
            {text: agent.ros_master_uri},
            {text: agent.network},
            {text: agent.authorization},
            {link: user_path(agent.user), text: agent.user.email},
            ]} %>
        <% end %>

<%= render partial: 'layouts/index_bottom' %>
