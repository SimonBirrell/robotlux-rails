<%= simple_form_for(@agent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>
    <%= f.input :org_id %>
    <%= f.input :guid %>
    <%= f.input :hostname %>
    <%= f.input :ros_master_uri %>
    <%= f.input :network %>
    <%= f.input :authorization %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
