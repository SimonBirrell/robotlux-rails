<%= render partial: 'layouts/show_top', locals: {item: @agent, item_class: 'agent', breadcrumb: [
      {link: org_path(@agent.org), text: @agent.org.name},
      {text: @agent.name}
      ]} %>       

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Name', field_id: 'name', field_value: @agent.name} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Slug', field_id: 'slug', field_value: @agent.slug} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Org', field_id: 'org', field_value: @agent.org.name} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Guid', field_id: 'guid', field_value: @agent.guid} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Hostname', field_id: 'hostname', field_value: @agent.hostname} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'ROS Master URI', field_id: 'ros_master_uri', field_value: @agent.ros_master_uri} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Network', field_id: 'network', field_value: @agent.network} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'Authorization', field_id: 'authorization', field_value: @agent.authorization} %>

        <%= render partial: 'layouts/show_field', locals: {field_name: 'User', field_id: 'user', field_value: @agent.user.email} %>

 
<%= render 'layouts/show_bottom' %>

<%= render partial: 'layouts/index_top', locals: {items_name: 'agent_sessions', headings: ['Agent', 'Start', 'End', 'Hostname', 'ROS Master URI', 'Status', 'Token'], index_style: :sub_table} %>

        <% @agent_sessions.each do |agent_session| %>
          <%= render partial: 'layouts/index_row', locals: {
            row: agent_session, 
            columns: [
            {link: agent_path(agent_session.agent), text: agent_session.agent.name},
            {text: agent_session.start_session},
            {text: agent_session.end_session},
            {text: agent_session.hostname},
            {text: agent_session.ros_master_uri},
            {text: agent_session.status},
            {text: agent_session.token}
            ]} %>
        <% end %>

<%= render partial: 'layouts/index_bottom' %>


